@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<div class="text-center b">
    <div class="PagLogin">
        <h1>@ViewData["Title"]</h1>
        <div>
            <div>
                <section>
                    <form class="Pagloginn" id="account" method="post">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Insira o Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Insira a Senha</label>
                        </div>

                        <button id="login-submit" type="submit" class="btnn btn-primary">Acessar</button>


                    </form>
                </section>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
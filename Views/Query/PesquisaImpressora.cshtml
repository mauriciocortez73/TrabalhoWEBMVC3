@model TrabalhoWEBMVC3.Models.Impressora

@{
    ViewData["Title"] = "PesquisaImpressora";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PesquisaImpressora</h1>

<h4>Impressora</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="impressoras">
            <div class="form-group">
                <label asp-for="descricao" class="control-label"></label>
                <input asp-for="descricao" class="form-control" />
                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Filtrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="impressoras">Listar Impressoras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
